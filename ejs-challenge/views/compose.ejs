<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <p><strong>Title</strong></p>
        <input type="text" class="form-control" name="titleComposed">
    </div>
    <div class="form-group">
        <p><strong>Post</strong></p>
        <textarea name="textComposed" class="form-control" id="" cols="30" rows="10"></textarea> <!-- WE MUST HAVE A NAME FOR THE INPUTS-->
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

